<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SpecifyUser">

    <TextView
        android:id="@+id/login_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="10sp"
        android:text="Welcome to Parked"
        android:textColor="#2e3041"
        android:textSize="24sp"
        tools:fontFamily="@font/open_sans_bold" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_logo_icon_black" />

    <LinearLayout
        android:id="@+id/choose_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/info_tab"
        android:layout_below="@id/login_welcome"
        android:background="#00000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/to_agent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text="Agent"
            android:textColor="@color/colorHalfBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/to_client"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#1caa53"
            android:gravity="center"
            android:text="Client"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1d1b27"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_us"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Contact Us"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/privacy_statement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Privacy statement"
            android:textColor="#fff"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>